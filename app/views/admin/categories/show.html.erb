<div class="col-sm-10 main">
  <h1><%= t ".title" %></h1>
  <h3><%= @category.name %></h3>
  <h4><%= t ".desc" %>
  <p><%= @category.desc %></p>
  <%= link_to t("edit"), edit_admin_category_path(@category),
                         class: "btn btn-warning mt-5" %>
  <%= link_to t("delete"), admin_category_path(@category),
                           method: :delete,
                           class: "btn btn-danger",
                           data:{confirm: t("are_you_sure")} %>
</div>
