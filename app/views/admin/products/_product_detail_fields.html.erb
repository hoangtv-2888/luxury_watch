<div class="nested-fields form-group">
   <div class="row">
      <div class="col-md-2">
         <%= f.label :product_size_id, t("size"), {class: "required"} %>
      </div>
      <div class="col-md-2">
         <%= f.label :product_color_id, t("color"), {class: "required"} %>
      </div>
      <div class="col-md-2">
         <%= f.label :quantity, t("quantity"), {class: "required"} %>
      </div>
      <div class="col-md-3">
         <%= f.label :price, t("price"), {class: "required"} %>
      </div>
      <div class="col-md-3">
      </div>
   </div>

   <div class="row">
      <div class="col-md-2">
         <%= f.collection_select :product_size_id, load_options(ProductSize, "size"),
                                                   :id, :size,
                                                   {}, {class: "form-control"} %>
      </div>
      <div class="col-md-2">
         <%= f.collection_select :product_color_id, load_options(ProductColor, "color"),
                                                   :id, :color,
                                                   {}, {class: "form-control"} %>
      </div>
      <div class="col-md-2">
         <%= f.number_field :quantity, class: "form-control "%>
      </div>
      <div class="col-md-3">
         <%= f.number_field :price, class: "form-control "%>
      </div>
      <div class="col-md-3">
         <%= link_to_remove_association t("delete"), f, class: "btn btn-danger mt-5 btn-sm" %>
      </div>
   </div>
</div>
