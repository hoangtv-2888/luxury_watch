<% if false %>
<div class="col-sm-10 main">
  <h1 class="page-header"><%= t ".title" %></h1>
  <%= search_form_for @q, url: admin_products_path, class: "form-inline" do |f| %>
    <%= f.search_field :name_cont, class: "form-control" %>
    <%= f.submit t("search"), class: "btn btn-primary" %>
  <% end %>
  <%== pagy_bootstrap_nav(@pagy) %>
  <%= link_to t(".create"), new_admin_product_path, class: "btn btn-primary" %>
  <div class="table-responsive">
    <table class="table table-striped">
      <thead>
        <tr>
          <th><%= t "id" %>
          <th><%= t "name" %></th>
          <th><%= t "images" %>
          <th><%= sort_link @q, :total_quantity, t("quantity") %></th>
          <th><%= sort_link @q, :created_at, t("created_at") %></th>
          <th><%= t "action" %></th>
        </tr>
      </thead>
      <tbody>
        <%= render @products %>
      </tbody>
    </table>
  </div>
</div>
<% end %>
<section class="content">
  <div class="row">
    <div class="col-xs-12">
      <div class="box">
        <div class="box-header">
          <h2 class="box-title">Tất cả sản phẩm.</h2>
        </div>
        <!-- /.box-header -->
        <div class="box-body">
          <%= link_to t(".create"), new_admin_product_path, class: "btn btn-primary", style: "margin-bottom: 15px" %>

          <%= search_form_for @q, url: admin_products_path, class: "form-inline" do |f| %>
            <%= f.search_field :name_cont, placeholder: "id, tên,...", class: "form-control" %>
            <%= f.submit t("search"), class: "btn btn-primary" %>
          <% end %>
          <table id="example1" class="table table-bordered table-striped">
            <thead>
            <tr>
              <th><%= sort_link @q, :id, "ID" %></th>
              <th><%= sort_link @q, :name, t("name") %></th>
              <th><%= t "images" %>
              <th><%= sort_link @q, :total_quantity, t("quantity") %></th>
              <th><%= sort_link @q, :created_at, t("created_at") %></th>
              <th><%= t "action" %></th>
            </tr>
            </thead>
            <tbody>
              <%= render @products %>
              <%== pagy_bootstrap_nav(@pagy) %>
            </tbody>
          </table>
        </div>
        <!-- /.box-body -->
      </div>
      <!-- /.box -->
    </div>
    <!-- /.col -->
  </div>
  <!-- /.row -->
</section>