<% provide :button_text, t("user.create_user") %>
<div class="register">
  <div class="container">
    <div class="register-top heading">
      <h2><%= t "register" %></h2>
    </div>
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <%= f.label t "user.name" %>
          <%= f.text_field :name, class: "form-control" %>
          <%= f.label t "user.address" %>
          <%= f.text_field :address, class: "form-control" %>
          <%= f.label t "user.phone" %>
          <%= f.text_field :phone, class: "form-control" %>
          <%= f.label t "user.email" %>
          <%= f.email_field :email, class: "form-control" %>
          <%= f.label t "user.password" %>
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
          <%= f.label t "user.password_confirmation" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
          <%= f.submit yield(:button_text), class: "btn btn-primary address" %>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
