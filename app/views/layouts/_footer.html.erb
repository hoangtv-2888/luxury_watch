<div class="information">
  <div class="container">
    <div class="infor-top">
      <div class="col-md-3 infor-left">
        <h3><%= t "follow_us" %></h3>
        <ul>
          <li><a href="#"><span class="fb"></span><h6><%= Settings.facebook %></h6></a></li>
          <li><a href="#"><span class="twit"></span><h6><%= Settings.twitter %></h6></a></li>
          <li><a href="#"><span class="google"></span><h6><%= Settings.google %></h6></a></li>
        </ul>
      </div>
      <div class="col-md-3 infor-left">
        <h3><%= t "information" %></h3>
      </div>
      <div class="col-md-3 infor-left">
        <h3><%= t "my_account" %></h3>
      </div>
      <div class="col-md-3 infor-left">
        <h3><%= t "store_information" %></h3>
        <h4><%= t "the_company_name" %>,
        <%= Settings.address %></h4>
        <h5><%= Settings.tel %></h5>
        <p><a href="mailto:example@email.com"><%= Settings.email %></a></p>
      </div>
      <div class="clearfix"></div>
    </div>
  </div>
</div>

<div class="footer">
  <div class="container">
    <div class="footer-top">
      <div class="col-md-6 footer-left">
        <form>
          <input type="text" value="Enter Your Email" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'Enter Your Email';}">
          <input type="submit" value="Subscribe">
        </form>
      </div>
      <div class="col-md-6 footer-right">
        <p><%= t "copy_right" %></p>
      </div>
      <div class="clearfix"></div>
      </div>
    </div>
</div>
