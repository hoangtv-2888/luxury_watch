<% provide :button_text, t("login") %>
<div class="register">
  <div class="container">
    <div class="register-top heading">
      <h2><%= t "login" %></h2>
    </div>
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <%= form_for :session, url: login_path do |f| %>
        <%= f.label t "user.email" %>
        <%= f.email_field :email, class: "form-control" %>
        <%= f.label t "user.password" %>
        <%= f.password_field :password, class: "form-control" %>
        <%= f.label :remember_me, class: "checkbox inline" do %>
        <%= f.check_box :remember_me %>
          <span><%= t "remember_password" %></span>
        <% end %>
          <%= link_to t("forgot_password"), new_password_reset_path %>
          <%= f.submit t("login"), class: "btn btn-primary" %>
        <% end %>
        <p class="address"><%= t "new_user?" %><%= link_to t("sign_up_now"), signup_path %></p>
      </div>
    </div>
  </div>
</div>
