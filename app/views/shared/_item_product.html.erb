<div class="col-md-3 product-left">
  <div class="product-main simpleCart_shelfItem">
    <%= image_tag product.display_image(product.images.first) if product.images.attached? %>
    <div class="product-bottom">
      <h3><%= link_to product.name, product %></h3>
      <p><%= t "explore_now" %></p>
      <h4><a class="item_add" href="#"><i></i></a> <span class=" item_price">
        <%= t "only"%> <%= product.product_detail.any? ? number_to_currency(product.product_detail.minimum(:price)) : t("contact_now") %>
      </span></h4>
    </div>
    <div class="srch srch1">
      <span>-50%</span>
    </div>
  </div>
</div>
